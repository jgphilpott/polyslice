{
  "name": "polyslice",
  "version": "1.0.0",
  "description": "An FDM slicer designed specifically for three.js - slice meshes directly to G-code without intermediary file formats",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "esbuild src/index.js --bundle --platform=node --format=cjs --outfile=dist/index.js",
    "build:esm": "esbuild src/index.js --bundle --platform=node --format=esm --outfile=dist/index.esm.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:minify": "uglifyjs dist/index.js -o dist/index.min.js --compress --mangle",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "dev": "node examples/basic.js",
    "prepublishOnly": "npm run build && npm run build:minify"
  },
  "keywords": [
    "3d-printing",
    "slicer",
    "gcode",
    "three.js",
    "3d",
    "fdm",
    "additive-manufacturing",
    "mesh",
    "slicing"
  ],
  "author": "Jacob Philpott <jacob@jgphilpott.com> (https://github.com/jgphilpott)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgphilpott/polyslice.git"
  },
  "bugs": {
    "url": "https://github.com/jgphilpott/polyslice/issues"
  },
  "homepage": "https://github.com/jgphilpott/polyslice#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "three": "^0.168.0"
  },
  "optionalDependencies": {
    "@jgphilpott/polyconvert": "*",
    "@jgphilpott/polytree": "*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.2",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "uglify-js": "^3.19.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
