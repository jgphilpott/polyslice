{
  "name": "@jgphilpott/polyslice",
  "version": "25.9.0",
  "description": "An FDM slicer designed specifically for three.js - slice meshes directly to G-code without intermediary file formats.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.browser.js",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "compile": "npx coffee -cb src/",
    "pretest": "npm run compile",
    "build": "npm run compile && npm run build:node && npm run build:browser",
    "build:node": "npm run build:cjs && npm run build:esm",
    "build:browser": "esbuild src/index.js --bundle --platform=browser --format=iife --global-name=Polyslice --outfile=dist/index.browser.js",
    "build:cjs": "esbuild src/index.js --bundle --platform=node --format=cjs --outfile=dist/index.js",
    "build:esm": "esbuild src/index.js --bundle --platform=node --format=esm --outfile=dist/index.esm.js",
    "build:minify": "uglifyjs dist/index.js -o dist/index.min.js --compress --mangle && uglifyjs dist/index.browser.js -o dist/index.browser.min.js --compress --mangle",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "dev": "node examples/basic.js",
    "prepublishOnly": "npm run build && npm run build:minify"
  },
  "keywords": [
    "additive-manufacturing",
    "3d-printing",
    "three.js",
    "slicer",
    "slicing",
    "gcode",
    "mesh",
    "3d",
    "fdm",
    "sla"
  ],
  "author": "Jacob Philpott <jacob.philpott@gmx.com> (https://github.com/jgphilpott)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgphilpott/polyslice.git"
  },
  "bugs": {
    "url": "https://github.com/jgphilpott/polyslice/issues"
  },
  "homepage": "https://github.com/jgphilpott/polyslice#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "three": "^0.180.0",
    "@jgphilpott/polyconvert": "^1.0.2",
    "@jgphilpott/polytree": "^0.1.1"
  },
  "devDependencies": {
    "coffeescript": "^2.7.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "uglify-js": "^3.19.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.test.coffee"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}